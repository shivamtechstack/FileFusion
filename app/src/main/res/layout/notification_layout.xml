<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/currentFileName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="File name :" />
    <LinearLayout
        android:layout_marginTop="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/currentFileSizeText"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="File Size : " />

        <TextView
            android:layout_weight="1"
            android:text="Copied : "
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/totalCopied"/>
    </LinearLayout>
    <ProgressBar
        android:id="@+id/currentFileProgress"
        android:layout_width="match_parent"
        android:layout_height="14dp"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:max="100"
        android:progress="0" />

    <TextView
        android:layout_marginTop="2dp"
        android:id="@+id/allFileSizeText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Total Size : "/>
    <ProgressBar
        android:id="@+id/allFilesProgress"
        android:layout_width="match_parent"
        android:layout_height="14dp"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:max="100"
        android:progress="0" />

</LinearLayout>